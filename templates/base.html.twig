<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Projet pluritechnique encadré 2, BTS S.I.O. S.L.A.M">
    <meta name="author" content="Kevin Allard">

    <title>{% block title %}Welcome!{% endblock %} · Mygavolt</title>

    {% block stylesheets %}
        <link href="{{ asset('build/css/app.css') }}" rel="stylesheet">
    {% endblock %}
</head>

<body>

<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
    <h5 class="my-0 mr-md-auto font-weight-normal">Mygavolt</h5>
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <nav class="my-2 my-md-0 mr-md-3">
            <a class="p-2 text-dark" href="{{ path('homepage') }}">{{ 'menu.home'|trans }}</a>
            <div class="btn-group">
                <a class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="username">
                    {{ app.user.username }}
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    {#<a class="dropdown-item" href="{{ path('profile') }}">{{ 'menu.profile'|trans }}</a>#}
                    <a class="dropdown-item" href="#">Another action</a>
                    <a class="dropdown-item" href="#">Something else here</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ path('logout') }}"><i class="mdi mdi-logout"></i> {{ 'menu.sign_out'|trans }}</a>
                </div>
            </div>
        </nav>
    {% else %}
        <nav class="my-2 my-md-0 mr-md-3">
            <a class="btn btn-outline-primary" href="{{ path('registration') }}">{{ 'menu.sign_up'|trans }}</a>
            <a class="btn btn-outline-secondary" href="{{ path('login') }}"><i class="mdi mdi-login"></i> {{ 'menu.sign_in'|trans }}</a>
        </nav>
    {% endif %}
</div>

<div class="container">

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}

                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}

    <footer class="pt-4 my-md-5 pt-md-5 border-top">
        <div class="row">
            <div class="col-12 col-md">
                <small class="d-block mb-3 text-muted">&copy; 2017-{{ "now"|date("Y") }} · Mygavolt</small>
            </div>
